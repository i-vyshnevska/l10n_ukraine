<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="payment_acquirer_liqpay" model="payment.acquirer">
            <field name="name">LiqPay</field>
            <field name="provider">liqpay</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="image" type="base64" file="liqpay_acquirer/static/description/icon.png"/>
            <field name="view_template_id" ref="liqpay_acquirer_button"/>
            <field name="environment">test</field>
            <field name="pre_msg">You will be redirected to the liqpay website after clicking on the payment button.</field>
            <field name="liqpay_public_key">your_public_key</field>
            <field name="liqpay_private_key">your_private_key</field>
            <field name="liqpay_base_url">your_base_url</field>
        </record>

    </data>
</odoo>
